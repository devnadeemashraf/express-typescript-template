{
  "name": "express-typescript-template",
  "version": "0.1.0",
  "description": "A Production Ready Express TypeScript Template to start building your next big project in no time. ",
  "main": "dist/index.js",
  "repository": "https://github.com/devnadeemashraf/express-typescript-template.git",
  "author": {
    "name": "Nadeem Ashraf",
    "email": "dev.nadeemashraf06@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=22.14.0",
    "yarn": ">=1.22.22"
  },
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "nodemon",
    "dev:debug": "nodemon --inspect",
    "dev:setup": "node scripts/setup.js",
    "build": "tsc && tsc-alias",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pretty:write": "prettier . --write",
    "pretty:check": "prettier . --check",
    "clean": "rimraf dist",
    "prepare": "husky",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "prisma:generate": "yarn prisma:generate:app && yarn prisma:generate:logs",
    "prisma:generate:app": "prisma generate --schema=./prisma/schema.app.prisma",
    "prisma:generate:logs": "prisma generate --schema=./prisma/schema.logs.prisma",
    "prisma:migrate:app": "prisma migrate dev --schema=./prisma/schema.app.prisma",
    "prisma:migrate:logs": "prisma migrate dev --schema=./prisma/schema.logs.prisma",
    "prisma:studio:app": "prisma studio --schema=./prisma/schema.app.prisma",
    "prisma:studio:logs": "prisma studio --schema=./prisma/schema.logs.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "redis": "^4.7.0",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-rate-limit": "^6.0.2",
    "@types/helmet": "^4.0.0",
    "@types/node": "^22.13.11",
    "@types/redis": "^4.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "nodemon": "^3.1.9",
    "prettier": "3.5.3",
    "prisma": "^6.5.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "**/*": "prettier . --write --ignore-unknown"
  }
}
